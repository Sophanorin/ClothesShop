<Window
    x:Class="FinalProject.Windows.subwindows.OrderStatus"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:FinalProject.Windows.subwindows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Order Status"
    Width="700"
    Height="450"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    x:Name="this"
    mc:Ignorable="d">
    <Grid Background="#12cad6">
        <Border
            Width="600"
            Height="350"
            Background="White">
            <ListView ItemsSource="{Binding OrderStatuses}" SelectedIndex="{Binding SelectedIndex}" MouseDoubleClick="ListView_MouseDoubleClick">
            </ListView>
        </Border>
    </Grid>
</Window>
