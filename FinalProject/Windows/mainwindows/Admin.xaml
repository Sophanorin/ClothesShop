            <MenuItem Header="New Employees" Height="30" Click="MenuItem_Click"/>
            <MenuItem Header="Category" Height="30" Click="Cetegory_Click"/>
            <MenuItem Header="View" Height="30">
                <MenuItem Header="View Employees" Click="Employees_Click"/>
                <MenuItem Header="View Product">
                    <MenuItem Header="View As Admin" Click="ViewAsAdmin_Click"/>
                    <MenuItem Header="View As Employee" Click="ViewAsCashier_Click"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Logout" Height="30" Click="Logout_Click"/>
        </Menu>
        <StackPanel x:Name="leftspace" Background="White">
        </StackPanel>
    </DockPanel>
