                    </MenuItem>
                </MenuItem>

                --><!--Accessories MenuItems--><!--
                <MenuItem Header="Accessories">
                    <MenuItem Header="Men's Accessories">
                        <MenuItem Header="New Scarves"/>
                        <MenuItem Header="New Gloves"/>
                        <MenuItem Header="New Glasses"/>
                        <MenuItem Header="New Belts"/>
                        <MenuItem Header="New Ties"/>
                        <MenuItem Header="New Cufflinks"/>
                        <MenuItem Header="New Socks"/>
                    </MenuItem>
                    <MenuItem Header="Women's Accessories">
                        <MenuItem Header="New Scarves"/>
